        xmlns:local="clr-namespace:ÄlytaloWpfJM"
        mc:Ignorable="d" Title="MainWindow" Height="1500" Width="900">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid x:Name="BackTable" OpacityMask="#FFE45151">
